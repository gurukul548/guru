<%- include('../includes/head.ejs') %>

</head>
<body>
    <%- include('../includes/navbar.ejs') %>
<div class="container" style="  max-width: 960px;background-color: beige;">
    <div class="py-5 text-center">
        
        <h2 style="color: rgb(11, 83, 151);
        font-family: Lucida Console, Courier New, monospace;" >Enroll Course</h2>
       
    </div>
    <div class="row">
        
        <div class="order-md-1">
            
            <form class="needs-validation" novalidate="" method="POST">
                <div class="row">
                    <div class="col-md-5  mb-3 ">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="firstName" name="fname" placeholder="" value="" required="">
                        <div class="invalid-feedback"> Valid first name is required. </div>
                    </div>
                    <div class="col-md-5  mb-3 ">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" name="lname" placeholder="" value="" required="">
                        <div class="invalid-feedback"> Valid last name is required. </div>
                    </div>
                </div>
                
                <div class="col-md-7 mb-3  ml-2">
                    <label for="email">Email <span class="text-muted">(Required)</span></label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="">
                    <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                </div>

                <div class="col-md-7 mb-3 ml-2">
                    <label for="number">Mobile No.</label>
                    <input type="number" class="form-control" id="address" name="pno" placeholder="" required="">
                    <div class="invalid-feedback">  </div>
                </div>
                <div class="col-md-7 mb-3 ml-2">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="" required="">
                    <div class="invalid-feedback">  </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="country">Country</label>
                        <select class="custom-select d-block w-100" name="country" id="country" required="">
                            <option value="">Choose...</option>
                            <option>India</option>
                        </select>
                        <div class="invalid-feedback"> Please select a valid country. </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label for="state">State</label>
                        <input type="text" class="form-control" id="state" name="state" placeholder="" required="">
                        <div class="invalid-feedback">  </div>
                        
                        </select>
                        <div class="invalid-feedback"> Please select a valid country. </div>

                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="zip">Zip</label>
                        <input type="text" class="form-control" id="zip" name="zip" placeholder="" required="">
                        <div class="invalid-feedback"> Zip code required. </div>
                    </div>

                    <div class="col-md-5 mb-3">
                    <label for="inputState">Course</label>
                        <select class="form-control" name="course">
                            <option selected>Choose your course</option>
                            <option value="1">Programming(BASIC)</option>
                            <option value="2">Programming(ADVANCED)</option>
                            <option value="3">Attitude Development(BASIC)</option>
                            <option value="4">Attitude Development(Advanced)</option>
                        </select>
                    </div>

                    <div class="col-md-5 mb-3">
                        <label for="inputState">Course Duration</label>
                            <select class="form-control" name="duration">
                                <option selected>Choose Course Duration</option>
                                <option value="1">1 Month</option>
                                <option value="2">3 Months</option>
                                <option value="3">6 Months</option>
                                   </select>
                        </div>
                    
                </div>
                
                <h4 class="mb-3">Payment</h4>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                        <label class="custom-control-label" for="credit">Pay by mobile using UPI method</label>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        
                            <img src="/Shared/img/payment.jpg" alt="Feature">
                       
                    </div>
                    
                </div>
              
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm Enroll</button>
            </form>
        </div>   
    </div>
     
</div>
 <!-- Footer Start -->
 <%- include('../includes/footer.ejs') %>
 <!-- Footer End -->
<script src="/js/enroll.js"></script>
</body>
</html>